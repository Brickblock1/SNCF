switch (FEAT_TRAINS, SELF, sw_231AC_graphics_animated, motion_counter % 6) {
    0: set_231AC_graphics_0;
    1: set_231AC_graphics_1;
    2: set_231AC_graphics_2;
    3: set_231AC_graphics_3;
    4: set_231AC_graphics_4;
