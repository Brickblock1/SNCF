spriteset (set_231EGHK_graphics_1,        "gfx/231EGHK.png") { tmpl_vehicle_231EGHK_8_views(1) }
spriteset (set_231EGHK_graphics_2,        "gfx/231EGHK.png") { tmpl_vehicle_231EGHK_8_views(2) }
spriteset (set_231EGHK_graphics_3,        "gfx/231EGHK.png") { tmpl_vehicle_231EGHK_8_views(3) }
spriteset (set_231EGHK_graphics_4,        "gfx/231EGHK.png") { tmpl_vehicle_231EGHK_8_views(4) }
spriteset (set_231EGHK_graphics_5,        "gfx/231EGHK.png") { tmpl_vehicle_231EGHK_8_views(5) }
