switch (FEAT_TRAINS, SELF, sw_231EGHK_graphics_animated, motion_counter % 6) {
    0: set_231EGHK_graphics_0;
    1: set_231EGHK_graphics_1;
    2: set_231EGHK_graphics_2;
    3: set_231EGHK_graphics_3;
    4: set_231EGHK_graphics_4;
    5: set_231EGHK_graphics_5;
}

switch(FEAT_TRAINS, SELF, sw_231EGHK_graphics, position_in_articulated_veh) {
    0: sw_231EGHK_graphics_animated;
    1: set_231EGHK_tender_graphics;
}

switch(FEAT_TRAINS, SELF, sw_231EGHK_articulated_part, extra_callback_info1) {
    1 : return item_231EGHK;
    return CB_RESULT_NO_MORE_ARTICULATED_PARTS;
}

item(FEAT_TRAINS, item_231EGHK) {
    property {
        name:                         string(STR_SNCF_TRAIN_231EGHK_NAME);
        climates_available:           bitmask(CLIMATE_TEMPERATE, CLIMATE_ARCTIC, CLIMATE_TROPICAL); 
        introduction_date:            date(1934, 1, 1);
        model_life:                   37;
        vehicle_life:                 25;
        reliability_decay:            11;
        refittable_cargo_classes:     bitmask();
        non_refittable_cargo_classes: bitmask();
        loading_speed:                0; 
        cost_factor:                  37;
        running_cost_factor:          165;
        sprite_id:                    SPRITE_ID_NEW_TRAIN;
        speed:                        130 km/h;
        misc_flags:                   bitmask();
        refit_cost:                   0;
        track_type:                   UNELECTRIFIED;
        ai_special_flag:              AI_FLAG_PASSENGER | AI_FLAG_CARGO;
        power:                        3000 hp;
        running_cost_base:            RUNNING_COST_STEAM;
        dual_headed:                  0;
        cargo_capacity:               0;
        weight:                       180 ton;
        ai_engine_rank:               0;
        engine_class:                 ENGINE_CLASS_STEAM;
        extra_power_per_wagon:        0 kW;
        tractive_effort_coefficient:  0.140;
        air_drag_coefficient:         0.06;
        extra_weight_per_wagon:       0 ton;
        bitmask_vehicle_info:         0;
    }
    graphics {
        default:                      sw_231EGHK_graphics;
        purchase:                     set_231EGHK_graphics_purchase;
        additional_text:              return string(STR_SNCF_TRAIN_231EGHK_ADDITIONAL_TEXT);
        articulated_part:             sw_231EGHK_articulated_part;
        visual_effect_and_powered:    return (position_in_articulated_veh == 0) ?
                                          visual_effect_and_powered(VISUAL_EFFECT_STEAM, 7, DISABLE_WAGON_POWER) :
                                          visual_effect_and_powered(VISUAL_EFFECT_DISABLE, 0, DISABLE_WAGON_POWER);
        length:                       return (position_in_articulated_veh == 0) ? 7 : 3;
        can_attach_wagon:             sw_attach_only_express_mail_passenger;
    }
}
